<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.giz.recordcell.widgets.ShadeImageButton
        android:id="@+id/item_taskbox_pager_icon"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@raw/undraw_slider"
        app:sib_solidColor="@color/white"
        app:sib_radius="16dp"
        app:sib_type="corner"
        app:sib_shadeColor="#DDD"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_small_round_corner"
        android:backgroundTint="#3D000000"
        />

    <TextView
        android:id="@+id/item_taskbox_pager_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="bottom"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="任务集名称"
        />

</FrameLayout>