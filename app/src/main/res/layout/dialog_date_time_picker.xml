<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/dialog_datetime_picker_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:tabSelectedTextColor="@color/white"
        app:tabRippleColor="@color/ripple_color"
        app:tabMode="fixed"
        app:tabPaddingStart="24dp"
        app:tabPaddingEnd="24dp"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorGravity="center"
        app:tabIndicatorHeight="32dp"
        app:tabIndicator="@drawable/bg_round_corner_tab_item">

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/img_desc"
            />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/img_desc"
            />

    </com.google.android.material.tabs.TabLayout>

    <com.giz.recordcell.widgets.AutoHeightViewPager
        android:id="@+id/dialog_datetime_picker_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>