<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:layout_width="48dp"
        android:layout_height="5dp"
        android:background="@drawable/bg_round_corner"
        android:backgroundTint="#D8D8D8"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/select_repeat_time_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/dialog_select_repeat_time_title"
            android:textColor="@color/black"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/select_repeat_time_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/new_todo_save_btn_text"
            android:textColor="@color/colorAccent"
            android:background="@drawable/bg_ripple_effect"
            android:layout_gravity="center_vertical|end"
            />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/select_repeat_time_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:minHeight="120dp">

        <LinearLayout
            android:id="@+id/select_repeat_time_type_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:gravity="center">

            <com.giz.recordcell.widgets.ShadeTextView
                android:id="@+id/select_repeat_time_everyday_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/new_daily_repeat_everyday_text"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"
                app:stv_solidColor="@color/colorAccent"
                app:fullRoundCorner="true"
                app:stv_shadeColor="@color/translucentColorAccent"
                app:stv_shadeLength="12dp"
                app:stv_yOffset="2dp"
                />
            <com.giz.recordcell.widgets.ShadeTextView
                android:id="@+id/select_repeat_time_week_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/new_daily_repeat_week_text"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"
                app:stv_solidColor="@color/colorAccent"
                app:fullRoundCorner="true"
                app:stv_shadeColor="@color/translucentColorAccent"
                app:stv_shadeLength="12dp"
                app:stv_yOffset="2dp"
                />
            <com.giz.recordcell.widgets.ShadeTextView
                android:id="@+id/select_repeat_time_month_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/new_daily_repeat_month_text"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center"
                app:stv_solidColor="@color/colorAccent"
                app:fullRoundCorner="true"
                app:stv_shadeColor="@color/translucentColorAccent"
                app:stv_shadeLength="12dp"
                app:stv_yOffset="2dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_repeat_time_week_nums"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="日"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_select_repeat_time_item"
                />
            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="一"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_select_repeat_time_item"
                />
            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="二"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_select_repeat_time_item"
                />
            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="三"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_select_repeat_time_item"
                />
            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="四"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_select_repeat_time_item"
                />
            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="五"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_select_repeat_time_item"
                />
            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="六"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:background="@drawable/bg_select_repeat_time_item"
                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/select_repeat_time_month_num_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginStart="4dp"
            app:spanCount="7"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            />

    </FrameLayout>

</LinearLayout>