<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D363636"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/collection_ll"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:translationY="-36dp"
        android:background="@color/colorPrimary"
        tools:translationY="0dp"
        >

        <ImageView
            android:id="@+id/collection_progress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/img_desc"
            android:src="@drawable/util_collection_progress"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/collection_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/collecting_text"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>